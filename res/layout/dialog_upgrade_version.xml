<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="0dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:orientation="vertical"
        android:padding="0dp" >

        <TextView
            android:id="@+id/new_version_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:minLines="1"
            android:padding="14dp"
            android:text="正在检查更新...."
            android:textColor="#ffeeeeee"
            android:textSize="18sp" />
        
        <TextView
            android:id="@+id/new_version_note"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginBottom="10dp"
            android:gravity="left"
            android:minLines="3"
            android:padding="14dp"
            android:text="正在检查更新...."
            android:textColor="#ffeeeeee"
            android:textSize="14sp"
            android:visibility="gone"
             />
        
        <LinearLayout
            android:id="@+id/needUpgrade"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:visibility="gone"
             >

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center" >

                <Button
                    android:id="@+id/upgrade_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/headview_button_bg"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textSize="14sp"
                    android:text="马上更新" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center" >

                <Button
                    android:id="@+id/upgrade_later"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/headview_button_bg"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textSize="14sp"
                    android:text="以后再说" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/noNeedUpgrade"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center" >

                <Button
                    android:id="@+id/no_upgrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/headview_button_bg"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textSize="14sp"
                    android:text="确定" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>